


# ---------------------------------------------------
# レクタングルクラス
# ---------------------------------------------------
class Rect
  
  
  # -----------------------------------------------
  # コンストラクタ
  # -----------------------------------------------
  constructor: (x, y, w, h)->
    
    @x = x || 0;
    @y = y || 0;
    @w = w || 0;
    @h = h || 0;
    
    
    
  # -----------------------------------------------
  # 
  # -----------------------------------------------
  right: =>
    
    return @x + @w;
  
  
  
  # -----------------------------------------------
  # 
  # -----------------------------------------------
  bottom: =>
    
    return @y + @h;
  
  
  
  # -----------------------------------------------
  # 
  # -----------------------------------------------
  center: =>
    
    return {
      x:~~(@x + @w * 0.5),
      y:~~(@y + @h * 0.5)
    };












module.exports = Rect;